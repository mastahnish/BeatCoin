<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="pl.myosolutions.beatcoin.utils.DigitsUtils" />

        <import type="pl.myosolutions.beatcoin.utils.CalculationUtils" />

        <variable
            name="exchangeItem"
            type="pl.myosolutions.beatcoin.model.ExchangeItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/coin_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcVector="@{exchangeItem.icon}" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/coin_acronym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{exchangeItem.baseCurrency}"
                        android:textSize="@dimen/big_text_size" />

                    <TextView
                        android:id="@+id/coin_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{exchangeItem.baseCurrencyName}"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"

                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                   >

                    <pl.myosolutions.beatcoin.utils.ChangeTextView
                        android:id="@+id/change_percent"
                        android:layout_width="@dimen/percentage_change_text_area_width"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:gravity="right|center_vertical"
                        tools:text="100"
                        android:text="@{CalculationUtils.calculateChange(exchangeItem.details.last, exchangeItem.details.beforelast)}"
                        android:textSize="@dimen/small_text_size" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="right"
                    >

                    <TextView
                        android:id="@+id/coin_current_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:layout_alignParentEnd="true"
                        android:text="@{DigitsUtils.formatWithDelimiters(exchangeItem.details.last) + ` ` + exchangeItem.conversionCurrency}"
                        android:textSize="@dimen/big_text_size" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/high"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_high_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@{DigitsUtils.formatWithDelimiters(exchangeItem.details.high)}"
                android:textColor="@color/grey_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/low"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_low_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@{DigitsUtils.formatWithDelimiters(exchangeItem.details.low)}"
                android:textColor="@color/grey_dark" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/spread"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_spread"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@{DigitsUtils.formatWithDelimiters(CalculationUtils.calculateSpread(exchangeItem.details.bid, exchangeItem.details.ask))}"
                android:textColor="@color/grey_dark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/volume"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/coin_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@{exchangeItem.details.volume}"
                android:textColor="@color/grey_dark" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />

    </LinearLayout>
</layout>