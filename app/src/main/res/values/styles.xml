<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat">
        <!-- Title text -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
        <!-- background of the  -->
         <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>



    <style name="PoppinsThinText">
        <item name="fontFamily">poppins</item>
        <item name="android:lineSpacingExtra">4sp</item>

    </style>

    <style name="PoppinsBoldText">
        <item name="fontFamily">poppinsbold</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="PoppinsRegularText">
        <item name="fontFamily">poppinsregular</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="PoppinsLightText">
        <item name="fontFamily">poppinslight</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="PoppinsBoldItalicText">
        <item name="fontFamily">poppinsbolditalic</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

</resources>
